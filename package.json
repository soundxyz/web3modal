{
  "name": "@soundxyz/web3modal",
  "version": "0.3.0",
  "description": "Modified version of web3modal",
  "homepage": "https://github.com/gelicamarie/web3modal",
  "bugs": {
    "url": "https://github.com/gelicamarie/web3modal"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gelicamarie/web3modal"
  },
  "license": "MIT",
  "author": "Angelica Turla",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "unpkg": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "directories": {
    "test": "test",
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "bootstrap": "pnpm install && pnpm -C example install",
    "build": "node build.mjs",
    "check": "pnpm run clean && pnpm run lint && pnpm run format && pnpm run build && pnpm run test",
    "clean": "rm -rf dist",
    "clean:all": "pnpm run clean && pnpm run clean:example && pnpm run clean:node_modules",
    "clean:example": "rm -rf example/build",
    "clean:node_modules": "rm -rf node_modules && cd example && rm -rf node_modules",
    "format": "prettier ./src/*.ts ./src/**/*.ts --write",
    "lint": "tslint ./src/*.ts ./src/**/*.ts",
    "prepare": "pnpm run clean && pnpm run build",
    "release": "changeset publish",
    "reset": "pnpm run clean:all && pnpm run bootstrap && pnpm run check",
    "start": "pnpm run check && pnpm -C example run start",
    "test": "mocha --require ./babel-polyfill.cjs test/**/*.spec.cjs",
    "watch:example": "pnpm run bootstrap && pnpm run build && cd example && pnpm run build"
  },
  "dependencies": {
    "detect-browser": "^5.1.0",
    "prop-types": "^15.8.1",
    "react-feather": "^2.0.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.11.5",
    "@changesets/cli": "^2.20.0",
    "@rollup/plugin-image": "^2.1.1",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^5.1.19",
    "@types/web3": "^1.2.2",
    "babel-eslint": "^10.1.0",
    "bob-ts": "^3.1.0",
    "bob-tsm": "^0.4.6",
    "chai": "^4.1.2",
    "esbuild": "^0.14.21",
    "eslint": "^7.10.0",
    "execa": "^6.1.0",
    "file-loader": "^3.0.1",
    "globby": "^11",
    "husky": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "5.2.0",
    "prettier": "^1.18.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "styled-components": "^5.3.3",
    "terser": "^3.14.1",
    "tslib": "^2.3.1",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tsup": "^5.11.13",
    "typescript": "^3.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "styled-components": "^5.3.3"
  }
}
